@model LittleBooks.Common.Models.AboutProjectModel
@using LittleBooks.Common.Resources;

@{
    ViewBag.Title = AdminResources.editAboutProject;
}

    <h2>@AdminResources.editAboutProject</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                @Html.TextAreaFor(model => model.Text, new { @class = "form-control", @cols = 50, @rows = 10 })
                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@AdminResources.save" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(AdminResources.back, "GetAboutProject")
</div>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
